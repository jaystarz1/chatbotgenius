<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NATO M&S Workflow - Test</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div id="test-root"></div>
    
    <!-- Load data modules -->
    <script src="js/phases-data.js"></script>
    <script src="js/ai-chains-data.js"></script>
    <script src="js/annex-c-data.js"></script>
    <script src="js/global-features-data.js"></script>
    <script src="js/icons.js"></script>
    
    <!-- Load utility functions -->
    <script src="js/utils.js"></script>
    
    <!-- Load UI components -->
    <script src="js/detail-blocks.js"></script>
    <script src="js/phase-renderer.js"></script>
    <script src="js/requirements-renderer.js"></script>
    <script src="js/main-workflow.js"></script>
    
    <script type="text/babel">
        // Test that all components loaded
        console.log('Testing NATO M&S Workflow Components...');
        console.log('Phases loaded:', window.phases ? window.phases.length : 'ERROR');
        console.log('AI Call Chains loaded:', window.aiCallChains ? Object.keys(window.aiCallChains).length : 'ERROR');
        console.log('Annex C Requirements loaded:', window.annexCRequirements ? Object.keys(window.annexCRequirements).length : 'ERROR');
        console.log('Global Features loaded:', window.globalFeatures ? window.globalFeatures.length : 'ERROR');
        console.log('Icons loaded:', window.lucideIcons ? Object.keys(window.lucideIcons).length : 'ERROR');
        console.log('Utils loaded:', window.getAIStepsForRequirement ? 'YES' : 'ERROR');
        console.log('Detail Blocks loaded:', window.DetailBlock ? 'YES' : 'ERROR');
        console.log('Phase Renderer loaded:', window.PhaseRenderer ? 'YES' : 'ERROR');
        console.log('Requirements Renderer loaded:', window.RequirementsRenderer ? 'YES' : 'ERROR');
        console.log('Main Workflow loaded:', window.InteractiveWorkflow ? 'YES' : 'ERROR');
        
        // Skip auth for testing
        sessionStorage.setItem('nato_authenticated', 'true');
        
        const { createRoot } = ReactDOM;
        const root = createRoot(document.getElementById('test-root'));
        
        // Render the main workflow component
        root.render(React.createElement(window.InteractiveWorkflow));
    </script>
</body>
</html>
